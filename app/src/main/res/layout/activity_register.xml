<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/register_back"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:src="@mipmap/zuojiantou"/>

        <TextView
            android:id="@+id/register_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="240dp"
            android:text="已有账号?"
            android:textColor="#ABA9AB"
            android:visibility="gone"/>
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="180dp"/>


    <LinearLayout
        android:id="@+id/register_lay"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shapefileregister"
        android:orientation="vertical">
        <EditText
            android:id="@+id/register_edText_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
             style="@style/register"
            android:hint="请输入用户名"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            style="@style/register"></View>
        <EditText
            android:id="@+id/register_edText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入大小写和数字,密码不能超过8位"
            style="@style/register"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            style="@style/register"></View>
        <EditText
            android:id="@+id/register_edText_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入电话号码"
            style="@style/register"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            style="@style/register"></View>
        <EditText
            android:id="@+id/register_edText_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入性别"
            style="@style/register"/>
    </LinearLayout>

    <Button
        android:id="@+id/register_but_register"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="50dp"
        android:text="注册"
        android:textColor="#ffff"
        android:background="@drawable/shapefileregisterbut"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客登录"
        android:textColor="#ABA9AB"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="50dp"
        android:textSize="15sp"/>


</LinearLayout>
