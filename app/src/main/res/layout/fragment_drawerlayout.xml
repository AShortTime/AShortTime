<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <!--用户基本信息头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@mipmap/drawerlayout_background"
        android:padding="20dp">

        <com.ast.www.view.CircleImageView
            android:id="@+id/user_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:src="@mipmap/raw_1499936862" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/user_text"
            android:layout_toRightOf="@+id/user_text"
            android:text="椰果奶茶"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/user_sex"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/sex" />

        <TextView
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_head"
            android:layout_marginTop="5dp"
            android:text="编辑个性签名" />
    </RelativeLayout>

    <com.ast.www.view.UserDrawMoudle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:left_image="@mipmap/user_look"
        app:right_image="@mipmap/into_icon"
        app:text="我的关注"></com.ast.www.view.UserDrawMoudle>

    <com.ast.www.view.UserDrawMoudle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:left_image="@mipmap/user_favorite"
        app:right_image="@mipmap/into_icon"
        app:text="我的收藏"></com.ast.www.view.UserDrawMoudle>

    <com.ast.www.view.UserDrawMoudle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:left_image="@mipmap/user_found"
        app:right_image="@mipmap/into_icon"
        app:text="搜索好友"></com.ast.www.view.UserDrawMoudle>

    <com.ast.www.view.UserDrawMoudle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:left_image="@mipmap/user_message"
        app:right_image="@mipmap/into_icon"
        app:text="消息通知"></com.ast.www.view.UserDrawMoudle>


</LinearLayout>