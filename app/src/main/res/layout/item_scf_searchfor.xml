<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#ffff"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/it_searchfor_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="8dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/it_searchfor_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/it_searchfor_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/it_searchfor_text1"
                android:layout_marginTop="5dp"
                android:text="2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/shapefilesousuo"
                android:id="@+id/it_searchfor_but_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@mipmap/youjiantou"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:text="关注"
                android:textColor="@color/appBlue"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
