<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/zuojiantou" />

        <TextView
            android:id="@+id/register_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="25dp"
            android:text="注册账号"
            android:textColor="#ABA9AB"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher" />



         <LinearLayout
             android:layout_gravity="center_horizontal"
             android:id="@+id/register_lay"
             android:layout_width="280dp"
             android:layout_height="90dp"
             android:background="@drawable/shapefileregister"
             android:orientation="vertical">
             <EditText
                 android:id="@+id/otherlogin_edtext_phone"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="11dp"
                 android:layout_marginTop="10dp"
                 android:background="@null"
                 android:hint="手机号"
                 android:inputType="number"
                 android:textColor="@color/white"
                 android:textColorHint="#ABA9AB" />

             <View
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginTop="10dp"
                 android:background="#ABA9AB"></View>

             <EditText
                 android:id="@+id/otherlogin_edtext_password"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="11dp"
                 android:layout_marginTop="10dp"
                 android:background="@null"
                 android:hint="密码"
                 android:textColor="@color/white"
                 android:inputType="textPassword"
                 android:textColorHint="#ABA9AB" />
         </LinearLayout>




         <Button
             android:layout_gravity="center_horizontal"
             android:id="@+id/otherlogin_but_login"
             android:layout_width="280dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
             android:background="@drawable/shapefileregisterbut"
             android:text="登录"
             android:textColor="#ffff" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="250dp"
             android:layout_marginTop="15dp"
             android:text="忘记密码"
             android:textColor="#ABA9AB" />

         <TextView
             android:id="@+id/otherlogin_text_Tourists"
             android:layout_gravity="center_horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
             android:text="游客登录"
             android:textColor="#ABA9AB"
             android:textSize="15sp" />


</LinearLayout>
