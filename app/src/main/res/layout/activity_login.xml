<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/register_back"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/left_back"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_launcher" />


    <Button
        android:id="@+id/login_but_wx"
        android:background="@drawable/shapefileweixin"
        style="@style/login_but_wx"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_but_wx"
    />

    <Button
        android:id="@+id/login_but_qq"
        android:background="@drawable/shapefileqq"
        android:text="@string/login_but_qq"
        android:layout_gravity="center_horizontal"
        style="@style/login_but_qq"/>

    <TextView
        android:id="@+id/login_text_qita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/login_text_qita"
        android:textColor="#ffff"
        android:textSize="20sp" />


</LinearLayout>
