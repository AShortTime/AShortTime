<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="register" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#1F64A5</item>
        <item name="android:textColorHint">#1F64A5</item>
    </style>


    <style name="login_but_qq" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@mipmap/qq</item>
    </style>

    <style name="login_but_wx" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">200dp</item>

        <item name="android:textColor">#ffff</item>

        <item name="android:paddingLeft">50dp</item>
        <item name="android:drawablePadding">10dp</item>

        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@mipmap/weixin</item>
    </style>

    <style name="drawerlayout_folder" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">50dp</item>



        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>

        <item name="android:gravity">center_vertical</item>
    </style>








</resources>
